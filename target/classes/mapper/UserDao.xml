<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.mus.community.dao.UserDao">

    <resultMap type="com.mus.community.entity.User" id="UserMap">
        <result property="id" column="ID" jdbcType="INTEGER"/>
        <result property="accountId" column="ACCOUNT_ID" jdbcType="VARCHAR"/>
        <result property="name" column="NAME" jdbcType="VARCHAR"/>
        <result property="token" column="TOKEN" jdbcType="VARCHAR"/>
        <result property="gmtCreat" column="GMT_CREAT" jdbcType="INTEGER"/>
        <result property="gmtModified" column="GMT_MODIFIED" jdbcType="INTEGER"/>
    </resultMap>

    <!--查询单个-->
    <select id="queryById" resultMap="UserMap">
        select
          ID, ACCOUNT_ID, NAME, TOKEN, GMT_CREAT, GMT_MODIFIED
        from PUBLIC.USER
        where ID = #{id}
    </select>

    <!--查询指定行数据-->
    <select id="queryAllByLimit" resultMap="UserMap">
        select
          ID, ACCOUNT_ID, NAME, TOKEN, GMT_CREAT, GMT_MODIFIED
        from PUBLIC.USER
        limit #{offset}, #{limit}
    </select>

    <!--通过实体作为筛选条件查询-->
    <select id="queryAll" resultMap="UserMap">
        select
          ID, ACCOUNT_ID, NAME, TOKEN, GMT_CREAT, GMT_MODIFIED
        from PUBLIC.USER
        <where>
            <if test="id != null">
                and ID = #{id}
            </if>
            <if test="accountId != null and accountId != ''">
                and ACCOUNT_ID = #{accountId}
            </if>
            <if test="name != null and name != ''">
                and NAME = #{name}
            </if>
            <if test="token != null and token != ''">
                and TOKEN = #{token}
            </if>
            <if test="gmtCreat != null">
                and GMT_CREAT = #{gmtCreat}
            </if>
            <if test="gmtModified != null">
                and GMT_MODIFIED = #{gmtModified}
            </if>
        </where>
    </select>

    <!--新增所有列-->
    <insert id="insert" keyProperty="id" useGeneratedKeys="true">
        insert into PUBLIC.USER(ACCOUNT_ID, NAME, TOKEN, GMT_CREAT, GMT_MODIFIED)
        values (#{accountId}, #{name}, #{token}, #{gmtCreat}, #{gmtModified})
    </insert>

    <!--通过主键修改数据-->
    <update id="update">
        update PUBLIC.USER
        <set>
            <if test="accountId != null and accountId != ''">
                ACCOUNT_ID = #{accountId},
            </if>
            <if test="name != null and name != ''">
                NAME = #{name},
            </if>
            <if test="token != null and token != ''">
                TOKEN = #{token},
            </if>
            <if test="gmtCreat != null">
                GMT_CREAT = #{gmtCreat},
            </if>
            <if test="gmtModified != null">
                GMT_MODIFIED = #{gmtModified},
            </if>
        </set>
        where ID = #{id}
    </update>

    <!--通过主键删除-->
    <delete id="deleteById">
        delete from PUBLIC.USER where ID = #{id}
    </delete>

</mapper>